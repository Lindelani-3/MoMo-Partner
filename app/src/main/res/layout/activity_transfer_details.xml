<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.transfer.TransferDetailsActivity">

    <LinearLayout
        android:id="@+id/lyt_transferDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/Style_Image" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_transferDetailsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="66dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/lyt_transferDetails"
        android:layout_above="@+id/btn_transfer_transfer"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_transfer_externalId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="External ID"
            android:text="" />

        <EditText
            android:id="@+id/et_transfer_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Amount"
            android:text="" />

        <EditText
            android:id="@+id/et_payeePartyID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Payee PartyID"
            android:text="" />

        <EditText
            android:id="@+id/et_payerMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Payer message (Mine)"
            android:text="" />

        <EditText
            android:id="@+id/et_payeeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payee Note"
            android:text="" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_transfer_transfer"
        style="@style/Style_ButtonWithinApp"
        android:layout_alignParentBottom="true"
        android:text="@string/transfer" />

</RelativeLayout>