<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style_Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">60dp</item>
        <item name="android:background">@drawable/button_config</item>
    </style>

    <style name="Style_ListView" parent="Widget.AppCompat.ListView">
        <item name="android:layout_marginHorizontal">33dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="Style_Image">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/mtn_logo</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">44dp</item>
    </style>

</resources>